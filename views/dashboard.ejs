<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/dashboard.css">
    <title>Tableau de bord</title>
  </head>
  <body>
    <header>
      <h1>Tableau de bord</h1>
      <nav>
        <ul>
          <li><a href="/catways">Catways</a></li>
          <li><a href="/reservations">Réservations</a></li>
          <li><a href="/users">Utilisateurs</a></li>
          <li><a href="/docapi">Documentation API</a></li>
          <li><a href="#" onclick="window.history.back(); return false;">Retour</a></li>
        </ul>
      </nav>
    </header>

    <main>
      <section class="user">
        <h2>Bienvenue <%= user.username %> !</h2>
        <p>Email : <%= user.email %></p>
        <p>Date du jour : <%= currentDate %></p>
        <a href="/">Déconnexion</a>
      </section>

      <section class="reservations">
        <h2>Réservations en cours</h2>
        <% if (reservations.length === 0) { %>
        <p>Aucune réservation en cours.</p>
        <% } else { %>
        <ul>
          <% reservations.forEach(res => { %>
          <li>
            <strong><%= res.boatName %></strong> - Quai <%= res.catwayNumber %>
            jusqu'au <%= res.endDate %>
          </li>
          <% }) %>
        </ul>
        <% } %>
      </section>
    </main>
  </body>
</html>
